all:
	cat hello.S

	@echo "================ Компиляция ================"
	gcc -m64 -c hello.S -o hello.o

	@echo "================ Линковка ================"
	ld -m elf_x86_64 -e _start hello.o -o hello.o

	@echo "- Опция -m elf_x86_64 указывает линковщику использовать 64-битный ELF-формат исполняемого файла.\n- Опция -e _start указывает точку входа в программу (адрес _start), где выполнение программы должно начаться."

	@echo "================ Запуск ================"
	./hello
